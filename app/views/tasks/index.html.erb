<div class="container">
  <div class="row">
    <h1 class="display-1 d-flex justify-content-center">My Tasks</h1>

    <ul class="list-group pt-2 pb-3">
      <% @tasks.each do |task| %>
        <li class="list-group-item">
          <%= link_to "#{task.title}", task_path(task.id) %>
        </li>
      <% end %>
    </ul>

  </div>
    <%= link_to 'New task', new_task_path, class: "btn btn-primary" %>
</div>

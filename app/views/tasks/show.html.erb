<div class="container">
  <div class="row">
    <h1 class="display-2"><%= @task.title %></h1>
    <p class="alert alert-warning"><%= @task.details %></p>
  </div>

    <%= link_to 'Tasks list', tasks_path, class: "btn btn-primary" %>
    <%= link_to 'Edit task', edit_task_path(@task), class: "btn btn-secondary"  %>
    <%= link_to 'Delete task', task_path(@task), data: {turbo_method: 'DELETE', turbo_confirm: 'confirm?' }, class: "btn btn-danger"  %>
</div>
